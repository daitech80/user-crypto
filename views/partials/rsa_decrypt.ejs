<section id="rsa-decrypt">
    <h2>RSA Decryption</h2>
    <form action="/rsa/decrypt" method="post">
        <label for="rsa-private-key">Private Key:</label>
        <textarea id="rsa-private-key" name="privateKey" rows="4" required></textarea>
        <label for="rsa-encrypted-text">Encrypted Text:</label>
        <input type="text" id="rsa-encrypted-text" name="encryptedText" required>
        <input type="submit" value="Decrypt">
    </form>
    <% if (cryptodata.decryptedText) { %>
        <h3>Decrypted Text:</h3>
        <p><%= cryptodata.decryptedText %></p>
    <% } %>
</section>
