<section id="rsa-encrypt">
    <h2>RSA Encryption</h2>
    <form action="/rsa/encrypt" method="post">
        <label for="rsa-public-key">Public Key:</label>
        <textarea id="rsa-public-key" name="publicKey" rows="4" required></textarea>
        <label for="rsa-text">Text to Encrypt:</label>
        <input type="text" id="rsa-text" name="text" required>
        <input type="submit" value="Encrypt">
    </form>
    <% if (cryptodata.encryptedText) { %>
        <h3>Encrypted Text:</h3>
        <p><%= cryptodata.encryptedText %></p>
    <% } %>
</section>
